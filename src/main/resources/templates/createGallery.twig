{% extends 'base.twig' %}

{% block content %}
<header class="gen_header">
    <div class="bg-image">
        <h1 class="ft-rw"> Create Gallery </h1>
    </div>
</header>

<div class="wrapper-form">
    <section id="about">
        <h3 class="ft-lt"> Gallery Registration Form </h3>
        <form class="post-forms" action="/self/add_gallery" method="POST" id="gallery_form">
            <input type="text" placeholder="Gallery Name"  name="gallery_name" required/><br>
            <input type="text" placeholder="License No."  name="license" required/><br>
            <input type="text" placeholder="Gallery Email ID"  name="email_id" required/><br>

            <h3> Add Address</h3>

            <input type="text" placeholder="Plot Number" class="login-input" name="plot_no" required/><br>
            <input type="text" placeholder="Street" class="login-input" name="street" required/><br>
            <input type="text" placeholder="City" class="login-input" name="city" required/><br>
            <input type="text" placeholder="State" class="login-input" name="state" required/><br>

            <input type="submit" value="Create Gallery" />
        </form>
    </section>
</div>


{% endblock %}

