{% extends 'base.twig' %}

{% block content %}
<header class="gen_header">
    <div class="bg-image">
        <h2 class="ft-rw"> Your Gallery Accounts </h2>
    </div>
</header>

<div class="wrapper-table">
    <section>
        <h2 class="table-title ft-rw">List of All Galleries</h2>
        <table>
            <tr class="table-head ft-rw">
                <th> Gallery Name </th>
                <th> Link to gallery </th>
            </tr>
            {% for row in galleries %}
            <tr>
                <td> {{ row.gallery_name }} </td>
                <td> <a href="/account/{{ row.gallery_id }}/profile"><span class="detail-button fc-white txt-sb"> Link</span></a></td>
               
            </tr>
            {% endfor %}
        </table>
    </section>
    <br>
    <br>
    <a href="/self/add_gallery"><span class="detail-button-lg fc-white txt-sb"> Create Gallery </span></a>
</div>
{% endblock %}