{% extends 'base.twig' %}

{% block content %}
<header class="gen_header">
    <div class="bg-image">
        <h1 class="ft-rw"> Add Review for the Order </h1>
    </div>
</header>

<div class="wrapper-form">
    <section id="about">
        <form class="post-forms" action="/self/order/{{ order_id }}/add_review/{{painting_id}}" method="POST" id="review_form">
            <input type="text" disabled name="painting_id" value="{{ painting_id }}" required>
            <textarea name="comment" rows="5" cols="100" required>Comment here...</textarea><br>
            <h4>Rating</h4>
            <input type="range" min="1" max="5" value="3" name="rating" required/>
            <input type="submit" value="Add Review" />
        </form>
    </section>
</div>
{% endblock %}

