{% extends 'base.twig' %}

{% block header %}
{% include 'galleryNav.twig' %}
{% endblock%}

{% block content %}
<header class="gen_header">
    <div class="bg-image">
        <h2 class="ft-rw"> FeedBacks </h2>
    </div>
</header>

<div class="wrapper-table">
    <section>
        <h2 class="sec_title ft-rw">List of All FeedBacks</h2>
        {% if reviews is not null %}
        <table>
            <tr class="table-head ft-rw">
                <th> Sl. No. </th>
                <th> Comment </th>
                <th> Rating </th>
                <th> Painting ID </th>
            </tr>
            {% for row in reviews %}
            <tr>
                <td> {{ loop.index }}</td>
                <td> {{ row.comment }}</td>
                <td> {{ row.rating }}</td>
                <td> {{row.painting_id}}</td>
            </tr>
            {% endfor %}
        </table>
        {% endif %}
    </section>
</div>
{% endblock %}