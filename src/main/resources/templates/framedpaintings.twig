{% extends 'base.twig' %}

{% block content %}
<header>
    <div class="bg-image">
        <!-- Fix form -->
        <h3 class="ft-rw">Artwork</h3>
        <h4 class="ft-rw">Search the framed paintings here</h4>
        <form action="/framed_paintings" method="get" id="search">
            <p>
                <input type="text" name="name" id="name_box">
                <input type="submit" name="info" value="Find">
                <br>
            </p>
        </form>
        <!-- Fix form -->
    </div>
</header>

<div class="wrapper-table">
    <section>
        <h2 class="table-title ft-rw">List of all framed paintings</h2>
        <table>
            <tr class="table-head ft-rw">
                <th> Name </th>
                <th> Link </th>
            </tr>
            {% for row in paintings %}
            <tr>
                <td>{{ row.name }}</td>
                <td><a href="/painting/{{ row.painting_id }}"><span class="detail-button fc-white txt-sb"> View</span></a></td>
            </tr>
            {% endfor %}
        </table>
    </section>
</div>
{% endblock %}