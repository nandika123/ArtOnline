{% extends 'base.twig' %}

{% block content %}
<header>
    <div class="bg-image">
        <h2 class="ft-rw"> Your Profile </h2>
    </div>
</header>

<div class="wrapper-table">
    <section>
        <h3 class="ft-lt"> General Info </h3>
        <table>
            <tr class="table-head ft-rw">
                <th> Key </th>
                <th> Value </th>
            </tr>
            <tr>
                <td> Email ID </td>
                <td> {{ user.email_id }}</td>
            </tr>
            <tr>
                <td> Name </td>
                <td> {{ user.first_name}}&nbsp;{{user.last_name}}</td>
            </tr>
        </table>

        <h3 class="ft-lt"> Addresses </h3>
        <table>
            <tr class="table-head ft-rw">
                <th> Address </th>
                <th> Address Type </th>
            </tr>
            {% for row in addresses %}
            <tr>
                <td> {{row.address.plot_no}},&nbsp;{{row.address.street}}<br>{{row.address.city}},&nbsp;<br>{{row.address.state}}</td>
                <td> {{ row.address_type }}</td>
            </tr>
            {% endfor %}
        </table>

        <h3 class="ft-lt"> Phone No </h3>
        <table>
        <tr class="table-head ft-rw">
            <th> Sl. No. </th>
            <th> Phone No. </th>
        </tr>
        {% for row in phones %}
        <tr>
            <td> {{ loop.index }}</td>
            <td> {{ row.phone_no }}</td>
        </tr>
        {% endfor %}
        </table>
    </section>

    <a href="/self/add_address"><span class="detail-button-lg fc-white txt-sb"> Add Address </span></a>
    <a href="/self/add_phone"><span class="detail-button fc-white txt-sb"> Add Phone </span></a>
</div>
{% endblock %}